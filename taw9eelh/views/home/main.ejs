<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/style.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="header">
      <div><a href="../login">login</a> <a href="../sign_up">sign_up</a></div>
      <div class="insert">
        <form action="/addRequest" method="post">
          <label for="from">from:</label>
          <input type="text" name="from" id="from" />

          <label for="to">to:</label> <input type="text" name="to" id="to" />

          <label for="date">date:</label>
          <input type="text" name="date" id="date" />

          <label for="reqType">request type:</label>
          <input type="text" name="reqType" id="reqType" />

          <input
            type="hidden"
            id="userId"
            name="userId"
            value="<%= user.id %>"
          />

          <button type="submit">submit</button>
        </form>
      </div>
    </div>
    <div class="container">
      <div class="provider">
        <table>
          <tr>
            <th>Name</th>
            <th>From</th>
            <th>To</th>
            <th>Date</th>
            <th>Mobile</th>
            <th>remove</th>
          </tr>
          <% for(let resP1 of resP){ %>
          <tr>
            <td><%= resP1.user.full_name %></td>
            <td><%= resP1.requestP.from %></td>
            <td><%= resP1.requestP.to %></td>
            <td><%= resP1.requestP.date.toLocaleDateString('en-GB') %></td>
            <td><%= resP1.user.mobile %></td>
            <td>
              <% if(user.id === resP1.user.id ){ %>
              <a href="./request/<%= resP1.requestP.id %>/delete">delete</a>
            
              <% }%>
            </td>
          </tr>
          <% }%>
        </table>
      </div>
      <div class="requester">
        <table>
          <tr>
            <th>Name</th>
            <th>From</th>
            <th>To</th>
            <th>Date</th>
            <th>Mobile</th>
            <th>remove</th>
          </tr>

          <% for(let resR1 of resR){ %>
          <tr>
            <td><%= resR1.user.full_name %></td>
            <td><%= resR1.requestR.from %></td>
            <td><%= resR1.requestR.to %></td>
            <td><%= resR1.requestR.date.toLocaleDateString('en-GB') %></td>
            <td><%= resR1.user.mobile %></td>
            <td>
              <% if(user.id === resR1.user.id ){ %>
              <a href="./request/<%= resR1.requestR.id %>/delete">delete</a>

              <% }%>
            </td>
          </tr>
          <% }%>
        </table>
      </div>
    </div>
  </body>
</html>
