<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/style.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="header">
      <div><a href="../login">login</a> <a href="../sign_up">sign_up</a></div>
      <div class="insert">
        <form action="/addRequest" method="post">
          <label for="from">from:</label>
          <input type="text" name="from" id="from" />

          <label for="to">to:</label> <input type="text" name="to" id="to" />

          <label for="date">date:</label>
          <input type="text" name="date" id="date" />

          <label for="reqType">request type:</label>
          <input type="text" name="reqType" id="reqType" />

<input type="hidden" id="userId" name="userId" value="<%= user.id %>">


          <button type="submit">submit</button>
        </form>
      </div>
    </div>
    <div class="container">
      <div class="provider">
        <table>
          <tr>
            <th>Name</th>
            <th>From</th>
            <th>To</th>
            <th>Date</th>
            <th>Mobile</th>
          </tr>
          <% for(let request of requestsP){ %>
          <tr>
            <td><%= user.full_name %></td>
            <td><%= request.from %></td>
            <td><%= request.to %></td>
            <td><%= request.date.toLocaleDateString('en-GB') %></td>
            <td><%= user.mobile %></td>
          </tr>
          <% }%>
        </table>
      </div>
      <div class="requester">
        <table>
          <tr>
            <th>Name</th>
            <th>From</th>
            <th>To</th>
            <th>Date</th>
            <th>Mobile</th>
          </tr>

          <% for(let request of requestsR){ %>
            <tr>
              <td><%= user.full_name %></td>
              <td><%= request.from %></td>
              <td><%= request.to %></td>
              <td><%= request.date.toLocaleDateString('en-GB') %></td>
              <td><%= user.mobile %></td>
            </tr>
            <% }%>
        </table>
      </div>
    </div>
  </body>
</html>
